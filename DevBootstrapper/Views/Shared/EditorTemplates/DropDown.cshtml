@model object

@{
    var isRequired = ViewData.ModelMetadata.IsRequired;
    var isRequiredStar = isRequired ? "*" : "";
    if (@ViewBag.label == null) {
        ViewData.ModelMetadata.DisplayName = ViewData.ModelMetadata.PropertyName;
    }
    if (ViewBag.@class != null) {
        ViewBag.@class = "form-control " + ViewBag.@class;
    } else {
        ViewBag.@class = "form-control";
    }

    if (ViewBag.liveSearch == null) {
        ViewBag.liveSearch = "true";
    }

    if (ViewBag.style == null) {
        ViewBag.style = "btn-success";
    }


    if (ViewBag.isPicker == null) {
        ViewBag.isPicker = "true"; // true , false to make it selectpicker or not
        ViewBag.@class += "selectpicker";
    }

    if (ViewBag.id == null) {
        ViewBag.id = ViewData.ModelMetadata.PropertyName;
    }

    if (ViewBag.label == null) {
        ViewBag.label = ViewData.ModelMetadata.DisplayName;
    }

    if (ViewBag.labelColumn == null) {
        ViewBag.labelColumn = "col-md-2";
    }
    if (ViewBag.textColumn == null) {
        ViewBag.textColumn = "col-md-10";
    }
    var selectListData = (IEnumerable<SelectListItem>)ViewBag.selectData;
}
<div class="form-group form-row @styleProperty"  data-prop="@styleProperty">
    <div class="controls">
        <label class="@ViewBag.labelColumn control-label" for="@ViewData.ModelMetadata.PropertyName">
            @ViewBag.label
            <span class="red">@isRequiredStar</span>
        </label>
        <div class="@ViewBag.textColumn select-holding-div non-dynamic-select">
            @Html.DropDownList("", selectListData, htmlAttributes: new {
                @class = @ViewBag.@class,
                data_style = @ViewBag.style,
                data_live_search = @ViewBag.liveSearch,
                id = ViewBag.id
            })
            @if (description != null) {
                <a data-toggle="tooltip" data-original-title="@description" title="@description" class="tooltip-show"><span class="description-icon"></span></a>
            }
            <a data-toggle="tooltip" title="Validating" data-original-title="Validating" class="tooltip-show CustomValidation @ViewData.ModelMetadata.PropertyName no-hover">
                <span data-display="@ViewBag.label" class="CustomValidation @ViewData.ModelMetadata.PropertyName glyphicon glyphicon-refresh glyphicon-refresh-spin hide" title="Validating"></span>
            </a>
        </div>
    </div>
</div>
