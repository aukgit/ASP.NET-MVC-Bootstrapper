@model object
@{
    bool isRequired = ViewData.ModelMetadata.IsRequired;
    string isRequiredStar = isRequired ? "*" : "",
        prop = ViewData.ModelMetadata.PropertyName.ToString(),
        propLower = prop.ToLower(),
        styleProperty = propLower,
        displayName = ViewData.ModelMetadata.DisplayName ?? ViewData.ModelMetadata.PropertyName,
        description = ViewData.ModelMetadata.Description;

    if (ViewBag.@class == null) {
    	ViewBag.@class = "btn-success";
    }

    if (ViewBag.liveSearch == null) {
        ViewBag.liveSearch = "true";
    }
    if (ViewBag.isPicker == null) {
        ViewBag.isPicker = "true"; // true , false to make it selectpicker or not
    }
    if (ViewBag.id == null) {
        ViewBag.id = ViewData.ModelMetadata.PropertyName;
    }
    if (ViewBag.dynamicLoad == null) {
        ViewBag.dynamicLoad = "true";
    }
    if (ViewBag.isDependable == null) {
        ViewBag.isDependable = "false";
    }
    if (ViewBag.label != null) {
        displayName = ViewBag.label;
    }
    if (ViewBag.labelColumn == null) {
        ViewBag.labelColumn = "col-md-2";
    }
    if (ViewBag.textColumn == null) {
        ViewBag.textColumn = "col-md-10";
    }
    if (ViewBag.isHtmlRequest == null) {
        ViewBag.isHtmlRequest = "false";
    }
}
<div data-json-combo-plugin="true" class="form-group form-row @styleProperty dynamic-select-container" data-dynamic-select-container="true" data-prop="@styleProperty">
    <div class="controls dev-plugin plugin-container dynamic-dropdown-type">
        <label data-progress-bar="true" data-prop="@ViewData.ModelMetadata.PropertyName">
            <a data-toggle="tooltip" title="Loading request..." data-original-title="Loading request..." class="tooltip-show CustomValidation @styleProperty no-hover">
                <span data-display="@displayName" class="@styleProperty glyphicon glyphicon-refresh glyphicon-spin" title="Loading request..."></span>
            </a>
            Loading request...
        </label>
        <div data-hidable="true" data-prop="@styleProperty">
            <label data-prop="@styleProperty" class="@ViewBag.textColumn control-label" for="@ViewData.ModelMetadata.PropertyName">
                @displayName
                <span class="red">@isRequiredStar</span>
            </label>
            <div class="@ViewBag.textColumn select-holding-div select-dynamic-holding-div">
                <div class="d-select-ip-@styleProperty dynamic-select-load"
                     data-prop="@styleProperty"
                     data-dev-dynamic-select="@ViewBag.dynamicLoad"
                     data-url="@ViewBag.url"
                     data-value="@Model"
                     data-additional-css="ViewBag.@class"
                     data-live-search="@ViewBag.liveSearch"
                     data-dependable="@ViewBag.isDependable"
                     data-dependable-prop-name="@styleProperty"
                     data-id="@ViewBag.id"
                     data-is-selectpicker="@ViewBag.isPicker">

                </div>
                @if (description != null) {
                    <a data-toggle="tooltip" data-original-title="@description" title="@description" class="tooltip-show"><span class="description-icon"></span></a>
                }
                <a data-toggle="tooltip" title="Validating" data-original-title="Validating" class="tooltip-show CustomValidation @ViewData.ModelMetadata.PropertyName no-hover">
                    <span data-display="@displayName" class="CustomValidation @ViewData.ModelMetadata.PropertyName glyphicon glyphicon-refresh glyphicon-refresh-spin hide" title="Validating"></span>
                </a>
            </div>
        </div>
    </div>
</div>
