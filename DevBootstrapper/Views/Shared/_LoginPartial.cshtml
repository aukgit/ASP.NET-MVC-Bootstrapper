@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("SignOut", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"})) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", new {area = ""}, new {title = "Manage"})
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
            </li>
        </ul>
    }
} else {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", new {area = ""}, new {id = "registerLink"})</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", new {Area = ""}, new {id = "loginLink"})</li>
    </ul>
}