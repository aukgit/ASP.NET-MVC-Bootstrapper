@if (@ViewBag.Success != null) {
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            <h3 class="h4">
                <span class="label label-success"><span class="glyphicon glyphicon-ok"></span> @ViewBag.Success</span></h3>
        </div>
    </div>
} else if (@ViewBag.ErrorSave != null) {
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            <h3 class="h4">
                <span class="label label-danger"><span class="glyphicon glyphicon-remove"></span> @ViewBag.ErrorSave</span></h3>
        </div>
    </div>
}